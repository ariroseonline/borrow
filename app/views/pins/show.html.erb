<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well">
			<%= image_tag @pin.image, class: "show-pic"  %> 
			<p>
	  		<%= current_user.name %>
			</p>				
			<p>
	  		<%= @pin.description %>
			</p>	
			<% if current_user == @pin.user %>
			<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>

	</div>
</div>



